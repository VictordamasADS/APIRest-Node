<div class="row">
  <div class="col-6"><h1>Produtos</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addproduto" type="button" class="btn btn-primary align-self-center">Add New Product</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Unidade</th>
      <th scope="col">Pre√ßo</th>
      <th scope="col">Categoria</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.nome}}</td>
      <td>{{this.unidade}}</td>
      <td>{{this.preco}}</td>
      <td>{{this.categoria}}</td>

        <td class="text-end">
            <a href="/editproduto/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Editar</a>
            <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
        </td>
    </tr>
    {{/each}}

  </tbody>
</table>